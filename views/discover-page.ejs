<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs', {title: 'Furever Friends'}) %>
    <link rel="stylesheet" href="/styles/pet-index.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <section class="hero">
        <h2>Discover</h2>
    </section>

    <main>
        <section class="listings">
            <ul>
                <% for (let song of songs) { %>
                <li>
                    <figure>
                        <img src="<%= song.photo %>">
                        <figcaption>
                            <h4><%= song.name %></h4>
                            <a href="/songs/<%= song._id %>">Learn More</a>
                        </figcaption>
                    </figure>
                </li>
                <% } %>
            </ul>
        </section>
    </main>

    <%- include('./partials/footer.ejs') %>
</body>

</html>