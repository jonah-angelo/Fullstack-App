<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs', {title: 'Leave a Review | Mongo Music'}) %>
    <link rel="stylesheet" href="/styles/review-details.css">
</head>

<body>
    <%- include('../partials/nav.ejs') %>

    <section class="hero">
        <h2>Leave a review</h2>
        <h4><i>You're reviewing <a href="/songs/<%= song._id  %>"><%= song.name %></a></i></h4>
    </section>

    <form action="/reviews/create/<%= song._id %>" method="POST">
        <label for="title">subject:</label><br>
        <input type="text" id="title" name="title" required><br>

        <label for="reviewer">Name:</label><br>
        <input type="text" id="reviewer" name="reviewer" required><br>

        <label for="content">Review:</label><br>
        <input type="text" id="content" name="content" required><br>

        <input type="submit" value="Submit">
    </form>

    <%- include('../partials/footer.ejs') %>
</body>

</html>